<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.atulmalik.brucationalapplication.Login"
    android:background="@android:color/white">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/brunel"
        android:id="@+id/imageView"
        android:foregroundGravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text='BRUCATIONAL'
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="280dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmailL"
        android:hint="EMail"
        android:foregroundGravity="center_vertical"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btLogin"
        android:layout_alignStart="@+id/btLogin" />


    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/etPassL"
        android:hint="Password"
        android:layout_below="@+id/etEmailL"
        android:layout_alignLeft="@+id/etEmailL"
        android:layout_alignStart="@+id/etEmailL" />



    <Button
        android:text="Login"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/btLogin"
        android:layout_below="@+id/etPassL"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="No account yet? Register here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/tvRegister"
        android:layout_below="@+id/btLogin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
